<div class="table-page">
  <% if @teams.empty? %>
    <h4>There are no teams in the system at this time.</h4>
  <% else %>

    <div class="table">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Rank</th>
            <th scope="col">Team Name</th>
            <th scope="col">Points</th>
          </tr>
        </thead>

        <tbody>
          <% @teams.each do |team| %>
            <tr>
              <td><%= @teams.find_index(team) + 1 %></td>
              <td><%= link_to team.name, team_path(team) %></td>
              <td><%= team.total_points %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <% if current_user.role?(:admin) %>
      <%= link_to 'New Team', new_team_path, class: "btn btn-primary" %>
    <% end %>

  <%end%>
</div>