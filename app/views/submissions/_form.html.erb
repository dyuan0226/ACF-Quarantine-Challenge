
<%= simple_form_for(@submission) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :challenge %>
    <%= f.association :user %>
    <%= f.input :date_completed, input_html: {value: f.object.date_completed || Date.today} %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="form-actions btn btn-primary form-class">
    <%= f.button :submit %>
  </div>
<% end %>
