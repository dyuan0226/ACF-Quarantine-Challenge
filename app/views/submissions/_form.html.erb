
<%= simple_form_for(@submission) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :user_id, :as => :hidden, :input_html => { :value => params[:user_id] } %>
    <%= f.association :challenge, collection: Challenge.alphabetical %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.file_field :content %>
  </div>

  <div class="form-inputs">
    <%= f.input :caption %>
  </div>

  <div class="form-actions btn btn-primary form-class">
    <%= f.button :submit %>
  </div>
<% end %>
