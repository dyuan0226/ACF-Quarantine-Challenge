<% if @challenges.empty? %>
  <h4>There are no challenges at this time.</h4>
<% else %>

  <div class="table-page">
  <h4>Challenges</h4>

  <div class='table-content'>

  <div>
    <ul class="nav nav-tabs">
      <li class="active left-tab"><a data-toggle="tab" href="#all">All</a></li>
      <li><a data-toggle="tab" href="#spiritual">Spiritual</a></li>
      <li><a data-toggle="tab" href="#physical">Physical</a></li>
      <li><a data-toggle="tab" href="#social">Social</a></li>
      <li class='right-tab'><a data-toggle="tab" href="#misc">Miscellaneous</a></li>
    <ul>
  </div>

  <div>
  <div class="tab-content">
    <div id="all" class="tab-pane fade in active">
      <table class="table table-striped table-hover">
        <thead class = "thead-dark">
          <th>Name</th>
          <th>Category</th>
          <th>Number of Points</th>
        </thead>
        <% for challenge in @challenges %>
          <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
            <td><%= link_to challenge.name, challenge_path(challenge) %></td>
            <td><%= challenge.category %></td>
            <td><%= challenge.num_points %></td>
          </tr>
        <% end %>
      </table>
    </div>
    
    <div id="spiritual" class="tab-pane fade">
      <table class="table table-striped table-hover">
        <thead class = "thead-dark">
          <th>Name</th>
          <th>Number of Points</th>
        </thead>
        <% for challenge in @spiritual_challenges %>
          <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
            <td><%= link_to challenge.name, challenge_path(challenge) %></td>
            <td><%= challenge.num_points %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div id="physical" class="tab-pane fade">
      <table class="table table-striped table-hover">
        <thead class = "thead-dark">
          <th>Name</th>
          <th>Number of Points</th>
        </thead>
        <% for challenge in @physical_challenges %>
          <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
            <td><%= link_to challenge.name, challenge_path(challenge) %></td>
            <td><%= challenge.num_points %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div id="social" class="tab-pane fade">
      <table class="table table-striped table-hover">
        <thead class = "thead-dark">
          <th>Name</th>
          <th>Number of Points</th>
        </thead>

        <% for challenge in @social_challenges %>
          <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
            <td><%= link_to challenge.name, challenge_path(challenge) %></td>
            <td><%= challenge.num_points %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div id="misc" class="tab-pane fade">
      <table class="table table-striped table-hover">
        <thead class = "thead-dark">
          <th>Name</th>
          <th>Number of Points</th>
        </thead>
        <% for challenge in @misc_challenges %>
          <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
            <td><%= link_to challenge.name, challenge_path(challenge) %></td>
            <td><%= challenge.num_points %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  </div>
</div>

</div>

  <p class="supertiny"></p>
  <br />
  <%= will_paginate @challenges, :param_name => 'challenge_page', previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
<% end %>

