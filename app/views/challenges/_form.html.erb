


<%= simple_form_for @challenge do |f| %>

  <div class="form-inputs form-class">
    <div class="form-group">
      <%= f.input :name %>
    </div> 
    <div class="form-group">
        <%= f.input :description %>
    </div>

    <%= f.input :category, collection: User::CHALLENGE_TYPES%>
    <%= f.input :num_points %>
  </div>


  <div class="form-actions btn btn-primary form-class">
    <%= f.button :submit %>
  </div>

<% end %>